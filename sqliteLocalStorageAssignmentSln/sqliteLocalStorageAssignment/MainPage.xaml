<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileApp.MainPage"
             Title="Profile Page" BackgroundImageSource="background.jpeg"
             BackgroundColor="Pink">
    <StackLayout Padding="20">
        <Entry Placeholder="Name" Text="{Binding CurrentProfile.Name}" />
        <Entry Placeholder="Surname" Text="{Binding CurrentProfile.Surname}" />
        <Entry Placeholder="Email" Text="{Binding CurrentProfile.Email}" />
        <Editor Placeholder="Bio" HeightRequest="100" Text="{Binding CurrentProfile.Bio}" />
        <Button x:Name="SaveButton" Text="Save"  />

        <ListView ItemsSource="{Binding Profiles}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding CurrentProfile.Name}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
